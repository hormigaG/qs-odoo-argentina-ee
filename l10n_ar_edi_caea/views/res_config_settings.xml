<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.l10n_ar_afip_ws</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="l10n_ar_edi.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='argentina_localization']/div[hasclass('o_setting_box')]" position="after">
                <div attrs="{'invisible':[('country_code', '!=', 'AR')]}" class="col-xs-12 col-md-6 o_setting_box">
                    <div class="o_setting_left_pane"/>
                    <div class="o_setting_right_pane">
                        <label for="l10n_ar_afip_verification_type" string="AFIP CAEA state"/>
                        <span class="fa fa-lg fa-building-o" groups="base.group_multi_company" title="Values set here are company-specific."/>
                        <div class="text-muted">Allow generate invoices with CAEA
                            </div>
                        <div class="content-group">
                            <div class="mt16">
                                <label for="afip_ws_caea_timeout"/>
                                <field name="afip_ws_caea_timeout" widget="float_time"/>
                            </div>
                            <div class="mt16">
                                <label for="afip_ws_caea_state"/>
                                <field attrs="{'readonly':True}" class="font-weight-bold" name="afip_ws_caea_state"/>
                            </div>
                            <div class="mt16">
                                <button attrs="{'invisible':[('afip_ws_caea_state','!=','active')]}" name="afip_green_button" string="Stop CAEA" style="background:#378805;color:#FFF;   " type="object"/>
                                <button attrs="{'invisible':[('afip_ws_caea_state','!=','inactive')]}" name="afip_red_button" string="Active CAEA" style="background:#FF0000;color:#FFF;   " type="object"/>
                                <button class="btn-link" icon="fa-arrow-right" name="%(l10n_ar_edi_caea.action_caea)d" string="List CAEA" type="action"/>
                                <button class="btn-link" icon="fa-arrow-right" name="%(l10n_ar_edi_caea.action_afipws_dummy)d" string="Check WS state" type="action"/>

                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>