<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<record id="afipws_dummy_form" model="ir.ui.view">
		<field name="name">l10n_ar_afipws_dummy_form</field>
		<field name="model">l10n_ar.afipws.dummy</field>
		<field name="arch" type="xml">
			<form string="description">
				<header/>
				<sheet>
					<group>
						<field name="afip_ws" invisible="True"/>
						<field name="company_id" invisible="True"/>
						<field name="use_caea" invisible="True"/>
						<field name="afip_ws_caea_state" attrs="{'readonly':True}" force_save="1"/>
						<field name="app_server_status" attrs="{'readonly':True}" force_save="1"/>
						<field name="db_server_status" attrs="{'readonly':True}" force_save="1"/>
						<field name="auth_server_status" attrs="{'readonly':True}" force_save="1"/>
						<field name="status" attrs="{'readonly':True}" force_save="1"/>
					</group>
				</sheet>
				<footer>
					<button attrs="{'invisible':[('status','!=',False), ('use_caea','=', True)]}" name="afip_red_button" string="Active contingency mode" type="object"/>
					<button  name="afip_green_button" string="Use WS" type="object"/>
				</footer>
			</form>
		</field>
	</record>
	<record id="action_afipws_dummy" model="ir.actions.act_window">
		<field name="name">afipws dummy</field>
		<field name="target">new</field>
		<field name="res_model">l10n_ar.afipws.dummy</field>
		<field name="view_mode">form</field>
	</record>
</odoo>